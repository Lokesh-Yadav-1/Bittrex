<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="4">

            <TextView
                android:id="@+id/completed_heading_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="BUY"
                android:textAlignment="center"
                android:background="@color/BUY"
                android:textColor="@color/BUYcolor"
                android:layout_weight="0.6"/>
            <TextView
                android:id="@+id/completed_description"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="BTC-NEO"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="2017-09-15 09:58"
                android:textAlignment="textEnd"
                android:layout_weight="2.4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="2">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Quantity:18.42074"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Actual Rate:0.00459999"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="2">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Cost:0.08494726"
                android:textAlignment="textStart"
                android:textColor="@color/COSTcolor"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Price Now:0.004945"
                android:textAlignment="textEnd"
                android:textColor="@color/COSTcolor"
                android:layout_weight="1"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>