<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            >

            <TextView
                android:id="@+id/completed_heading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="BUY"
                android:textAlignment="center"
                android:background="@color/BUY"
                android:textColor="@color/BUYcolor"/>
            <TextView
                android:id="@+id/completed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC-NEO"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="2017-09-15 09:58"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quantity:18.42074"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Actual Rate:0.00459999"
                android:textAlignment="center"
                android:layout_marginLeft="90dp"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cost:0.08494726"
                android:textAlignment="center"
                android:textColor="@color/COSTcolor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price Now:0.004945"
                android:textAlignment="center"
                android:layout_marginLeft="97.2dp"
                android:textColor="@color/COSTcolor"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>