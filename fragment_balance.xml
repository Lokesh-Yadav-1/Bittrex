<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.lokesh.bittrexcryptoexchange.BalanceFragment"
    >


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#207ED1"
                android:textSize="20dp"
                android:text="Total Balance" />

            <TextView
                android:id="@+id/balance_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bitcoin Current Rate: B" />
            <TextView
                android:id="@+id/balance_bitcoin_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11458.23" />
        </LinearLayout>


            <TextView
                android:id="@+id/balance_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2.254542" />
            <TextView
                android:id="@+id/balance_indollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24754.568" />
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/balance_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>